@page "/"

<div class="container-fluid pt-3">
    <div class="row">
        <div class="col-md-12">
            <SimpleGrid T="ProductModel"
                        Parameters="_gridViewModel.ProductGridParameters"
                        OnAddNewEvent="OnAddNewHandler"
                        OnEditEvent="OnEditHandler" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <ModalDialog ViewModel=_dialogViewModel></ModalDialog>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <ProductEditor ViewModel="_editorViewModel" OnSaveEvent="OnSaveHandler"></ProductEditor>
        </div>
    </div>
</div>
